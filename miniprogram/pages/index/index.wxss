/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.screen {
  background: rgb(7, 128, 165);
  padding: 10rpx;
  font-size: 80rpx;
  color: white;
  height: 444rpx;
  width: 100%;
  word-break: break-all;
  box-sizing: border-box;
}

@keyframes changeToS_screen {
  from {font-size: 60rpx}
  to {
    font-size: 40rpx;
  }
}

@keyframes changeToM_screen {
  from {font-size: 80rpx}
  to {
    font-size: 60rpx;
  }
}

@keyframes changeToL_screen {
  from {font-size: 60rpx}
  to {
    font-size: 80rpx;
  }
}

.screen-fontsize-s {
  animation-name: changeToS_screen;
  animation-duration: 0.2s;
  animation-timing-function: ease-in;
  animation-fill-mode: forwards;
}

.screen-fontsize-m {
  animation-name: changeToM_screen;
  animation-duration: 0.2s;
  animation-timing-function: ease-in;
  animation-fill-mode: forwards;
}

.screen-fontsize-l {
  animation-name: changeToL_screen;
  animation-duration: 0.2s;
  animation-timing-function: ease-in;
  animation-fill-mode: forwards;
}

.res {
  background: rgb(4, 122, 143);
  padding: 20rpx 10rpx 40rpx 10rpx;
  font-size: 74rpx;
  color: white;
  height: 130rpx;
  width: 100%;
  line-height: 80rpx;
  word-break: break-all;
  box-sizing: border-box;
  position: relative;
}

@keyframes changeToS_res {
  from {font-size: 60rpx}
  to {
    font-size: 40rpx;
  }
}

@keyframes changeToM_res {
  from {font-size: 80rpx}
  to {
    font-size: 60rpx;
  }
}

@keyframes changeToL_res {
  from {font-size: 60rpx}
  to {
    font-size: 80rpx;
  }
}

.res-fontsize-s {
  animation-name: changeToS_res;
  animation-duration: 0.2s;
  animation-timing-function: ease-in;
  animation-fill-mode: forwards;
}

.res-fontsize-m {
  animation-name: changeToM_res;
  animation-duration: 0.2s;
  animation-timing-function: ease-in;
  animation-fill-mode: forwards;
}

.res-fontsize-l {
  animation-name: changeToL_res;
  animation-duration: 0.2s;
  animation-timing-function: ease-in;
  animation-fill-mode: forwards;
}

.main {
  background: #000;
}

.row {
  width: 750rpx;
  display: flex;
}

.func-item, .num-item, .cal-item {
  display: flex;
  color: rgb(255, 255, 255);
  background: rgb(7, 43, 54);
  width: 200rpx;
  height: 140rpx;
  justify-content: center;
  align-items: center;
  font-size: 55rpx;
  border-top: 1rpx solid #ccc;
  border-left: 1rpx solid #ccc;
  position: relative;
  /* border-radius: 20rpx; */
}

.func-item.clear {
  color: #fff;
  background: rgb(255, 102, 0);
}

.func-item.back {
  color: #fff;
  background: rgb(255, 102, 0);
}

.cal-item {
  color: #fff;
  font-size: 80rpx;
  background: rgb(255, 145, 0);
}

.num-item.dot {
  font-size: 66rpx;
}

.func-item:active, .num-item:active, .cal-item:active {
  color: rgb(255, 255, 255);
  background: rgb(21, 75, 119);
}

.num-tip {
  position: absolute;
  font-size: 24rpx;
  height: 100%;
  bottom: -50rpx;
  left: 80rpx;
  color: rgb(5, 202, 209);
  display: flex;
  align-items: center;
}
.res-intro{
  position: absolute;
  font-size: 24rpx;
  height: 100%;
  top: 0;
  right: 10rpx;
  color: rgb(73, 178, 182);
  display: flex;
  align-items: center;
}
.right-intro{
  position: absolute;
  font-size: 22rpx;
  left: 5rpx;
  height: 100%;
  top: 0;
  color: rgb(255, 230, 0);
}
.item-intro{
  position: absolute;
  font-size: 22rpx;
  top: 0;
  left: 5rpx;
  color: rgb(65, 186, 190);
}
